{
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Nord",
    "editor.fontFamily": "Fira Code",
    "editor.matchBrackets": true,
    "editor.formatOnPaste": true,
    "C_Cpp.updateChannel": "Insiders",
    "latex-workshop.latex.outDir": "%DIR%/latex.out",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.pdf.external.args": {
        "command": "zathura",
        "args": [
            "--synctex-editor-command",
            "code --reuse-window -g \"%{input}:%{line}\"",
            "%PDF%"
        ]
    },
    "latex-workshop.view.pdf.external.synctex": {
        "command": "zathura",
        "args": [
            "--synctex-forward=%LINE%:0:%TEX%",
            "%PDF%"
        ]
    },
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-pdf",
                "-bibtex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%DIR%/latex.out",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk xepdf",
            "command": "latexmk",
            "args": [
                "-pdfxe",
                "-bibtex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%DIR%/latex.out",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk luapdf",
            "command": "latexmk",
            "args": [
                "-pdflua",
                "-bibtex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%DIR%/latex.out",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-file-line-error",
                "-synctex=1",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk xelatex",
            "tools": [
                "latexmk xepdf"
            ]
        },
        {
            "name": "latexmk lualatex",
            "tools": [
                "latexmk luapdf"
            ]
        },
        {
            "name": "pdflatex âžž biblatex âžž pdflatex`Ã—2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        }
    ],
    // vim settings
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "d",
                "d"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-w>": false,
        "<C-b>": false,
        "<C-x>": false,
        "<C-k>": false,
        "<C-t>": false
    },
    "astyle.astylerc": "/home/daniel/.astylerc",
    "diffEditor.ignoreTrimWhitespace": false,
    "files.exclude": {
        "**/.ccls-cache": true,
        "**/*.aux": true,
        "**/*.bbl": true,
        "**/*.blg": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.log": true,
        "**/*.xdv": true
    },
    "terminal.external.linuxExec": "alacritty",
    "ccls.completion.enableSnippetInsertion": true,
    "ccls.completion.detailedLabel": true,
    "[cpp]": {
        "editor.defaultFormatter": "ccls-project.ccls"
    },
    "terminal.explorerKind": "external",
    "files.associations": {
        "*.ipynb": "jupyter"
    },
    "python.pythonPath": "/bin/python",
    "cmake.preferredGenerators": [
        "Unix Makefiles",
        "Ninja"
    ],
    "cSpell.userWords": [
        "ATIF",
        "BDDs",
        "Baptiste",
        "Dantzig",
        "Gurobi",
        "Hoeve",
        "MINJOB",
        "Sadykov",
        "Tikzstyle",
        "WSPT",
        "Xeon",
        "ZDDs",
        "bioinformatics",
        "convexification",
        "discretization",
        "footnoteref",
        "gchar",
        "integrality",
        "natbib",
        "pred"
    ],
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.chktex.enabled": true,
    "cmake.configureOnOpen": false,
    "C_Cpp.default.cStandard": "c99",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "window.zoomLevel": 0,
    "terminal.integrated.rendererType": "dom",
    "[c]": {
        "editor.defaultFormatter": "ccls-project.ccls"
    },
    "cSpell.ignoreRegExpList": [
        "GRB.*"
    ],
    "C_Cpp.autocomplete": "Disabled",
    "languageTool.language": "en-GB",
    "ltex.language": "en-GB"
}
